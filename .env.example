# Environment variables for PostgreSQL setup
# Copy this file to .env and update with your values
# DO NOT commit .env file to git (it's in .gitignore)

# Database Selection - ALWAYS USE POSTGRESQL
USE_POSTGRES=true

# PostgreSQL Connection (PRIMARY DATABASE)
ConnectionStrings__PostgreSQL=Host=localhost;Port=5432;Database=starplusdb;Username=postgres;Password=postgrespw
ConnectionStrings__DefaultConnection=Host=localhost;Port=5432;Database=starplusdb;Username=postgres;Password=postgrespw

# JWT Settings (change in production!)
JwtSettings__SecretKey=YourSuperSecretKeyThatIsAtLeast32CharactersLong!
JwtSettings__Issuer=FrozenApi
JwtSettings__Audience=FrozenApi
JwtSettings__ExpiryInHours=8

# CORS Origins (update for production)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5001

# ASP.NET Core Environment
ASPNETCORE_ENVIRONMENT=Development

# Port Configuration (optional)
# PORT=5001

# Production PostgreSQL Example
# USE_POSTGRES=true
# ConnectionStrings__PostgreSQL=Host=prod-db.example.com;Port=5432;Database=starplusdb;Username=produser;Password=SECURE_PASSWORD_HERE;SslMode=Require
# JwtSettings__SecretKey=GENERATE_SECURE_KEY_AT_LEAST_32_CHARACTERS
# ALLOWED_ORIGINS=https://yourapp.com,https://www.yourapp.com
# ASPNETCORE_ENVIRONMENT=Production
